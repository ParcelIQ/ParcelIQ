      / Tabs content
      div.px-6.py-6
        / Average Cost per Shipment tab content
        div.block data-reports-target="savingsBreakdownTabContent" data-tab-content="averageCost"
          = render 'customer/reports/average_cost_per_shipment_details'
        
        / Transportation Charge Savings tab content
        div.hidden data-reports-target="savingsBreakdownTabContent" data-tab-content="transportationCharge"
          = render 'customer/reports/transportation_charge_savings'
        
        / Surcharge Savings tab content
        div.hidden data-reports-target="savingsBreakdownTabContent" data-tab-content="surcharge"
          = render 'customer/reports/surcharge_savings'
        
        / Dimensional Savings tab content
        div.hidden data-reports-target="savingsBreakdownTabContent" data-tab-content="dimensional"
          = render 'customer/reports/dimensional_savings'
        
        / Late Shipment Refunds tab content
        div.hidden data-reports-target="savingsBreakdownTabContent" data-tab-content="lateShipment"
          = render 'customer/reports/late_shipment_refunds'
        
        / Average Savings per Shipment tab content
        div.hidden data-reports-target="savingsBreakdownTabContent" data-tab-content="averageSavings"
          = render 'customer/reports/average_savings_per_shipment'

        / Distribution Mapping tab content
        div.hidden data-reports-target="savingsBreakdownTabContent" data-tab-content="distribution"
