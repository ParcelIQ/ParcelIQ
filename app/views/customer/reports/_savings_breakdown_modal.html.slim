/ Savings Breakdown Modal
div.fixed.inset-0.z-50.overflow-y-auto.hidden data-reports-target="savingsBreakdownModal"
  / Modal backdrop
  div.fixed.inset-0.bg-gray-500.bg-opacity-75.transition-opacity data-action="click->reports#closeSavingsBreakdownModal"
  
  / Modal content
  div.relative.flex.flex-col.items-center.justify-center.min-h-screen.pointer-events-none
    div.relative.bg-white.rounded-xl.shadow-xl.pointer-events-auto.w-full.max-w-5xl.mx-auto.overflow-hidden data-action="click->reports#stopPropagation"
      / Modal header
      div.px-6.py-4.bg-blue-50.border-b.border-blue-100.flex.items-center.justify-between
        h3.text-xl.font-bold.text-gray-900 Comparison Savings Breakdown
        button.text-gray-500.hover:text-gray-700.focus:outline-none data-action="click->reports#closeSavingsBreakdownModal" type="button"
          svg.h-6.w-6[xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"]
            path[stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"]
      
      / Tabs navigation
      div.border-b.border-gray-200
        div.flex.items-center.px-6.overflow-x-auto.whitespace-nowrap
          button.border-b-2.border-blue-500.text-blue-600.py-3.px-4.text-sm.font-medium data-reports-target="savingsBreakdownTab" data-tab="averageCost" data-action="click->reports#switchSavingsBreakdownTab" Average Cost
          button.border-b-2.border-transparent.text-gray-500.hover:text-gray-700.hover:border-gray-300.py-3.px-4.text-sm.font-medium data-reports-target="savingsBreakdownTab" data-tab="transportationCharge" data-action="click->reports#switchSavingsBreakdownTab" Transportation Charge
          button.border-b-2.border-transparent.text-gray-500.hover:text-gray-700.hover:border-gray-300.py-3.px-4.text-sm.font-medium data-reports-target="savingsBreakdownTab" data-tab="surcharge" data-action="click->reports#switchSavingsBreakdownTab" Surcharge
