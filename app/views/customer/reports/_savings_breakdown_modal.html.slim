          button.border-b-2.border-transparent.text-gray-500.hover:text-gray-700.hover:border-gray-300.py-3.px-4.text-sm.font-medium data-reports-target="savingsBreakdownTab" data-tab="lateShipment" data-action="click->reports#switchSavingsBreakdownTab" Late Shipment
          button.border-b-2.border-transparent.text-gray-500.hover:text-gray-700.hover:border-gray-300.py-3.px-4.text-sm.font-medium data-reports-target="savingsBreakdownTab" data-tab="averageSavings" data-action="click->reports#switchSavingsBreakdownTab" Average Savings
